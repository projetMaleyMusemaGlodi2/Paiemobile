<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ComptebusFragment"
        android:id="@+id/frameLayoutch3">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/idrelativech">

        <LinearLayout
                android:backgroundTint="@color/startblue"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:background="@drawable/entetebackground"
        >
            <ImageView
                    android:layout_marginTop="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="107dp"
                    android:layout_height="97dp"
                    android:src="@drawable/ic_directions_bus_black_24dp"
            />
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHARGEMENT COMPTE"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="21sp"
            />
        </LinearLayout>

    </RelativeLayout>





    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">


            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RelativeLayout
                            android:id="@+id/relativeLayoutch1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp">

                        <ImageView
                                android:id="@+id/imageView_montantchargement"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@color/startblue"
                                android:padding="8dp"
                                android:src="@drawable/ic_attach_money_black_24dp"
                                android:tint="@color/white" />

                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/imageView_montantchargement"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/imageView_montantchargement"
                                android:background="@color/editTextBG"
                                android:hint="Montant"
                                android:id="@+id/edtmontantchargebus"
                                android:inputType="number"
                                android:paddingLeft="20dp"
                                android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/relativeLayoutch2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relativeLayoutch1"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="15dp">

                        <ImageView
                                android:id="@+id/imageView_buscharge"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@color/startblue"
                                android:padding="8dp"
                                android:src="@drawable/ic_person_black_24dp"
                                android:tint="@color/white" />

                        <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/imageView_buscharge"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/imageView_buscharge"
                                android:background="@color/editTextBG"
                                android:hint="Numero Plaque"
                                android:id="@+id/edtbuscharge"
                                android:inputType="text"
                                android:paddingLeft="20dp"
                                android:textSize="15sp" />

                    </RelativeLayout>


                    <RelativeLayout
                            android:id="@+id/relativeLayoutch3"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@id/relativeLayoutch2"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp">



                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@color/transparent"
                                android:textAllCaps="false"
                                android:textColor="@color/textColor"
                                android:textSize="13sp" />

                    </RelativeLayout>

                    <Button
                            android:id="@+id/btn_save_chargebus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relativeLayoutch3"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/rounded_btn"
                            android:fontFamily="sans-serif-medium"
                            android:text="ENREGISTRER"
                            android:textColor="@color/white" android:layout_marginTop="2dp"/>

                    <ImageView
                            android:id="@+id/imageViewch2"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/btn_save_chargebus"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"
                            android:layerType="software"
                            android:src="@drawable/circle" />

                    <!--<TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Ou se connecter avec"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />-->

