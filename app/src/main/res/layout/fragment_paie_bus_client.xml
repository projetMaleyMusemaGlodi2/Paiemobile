<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PaieBusClientFragment"
        android:id="@+id/frameLayoutp4">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/idrelativep">

        <LinearLayout
                android:backgroundTint="@color/startblue"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:background="@drawable/entetebackground"
        >
            <ImageView
                    android:layout_marginTop="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="107dp"
                    android:layout_height="97dp"
                    android:id="@+id/btn_scanner"
                    android:src="@drawable/ic_add_a_photo_black_24dp"
            />
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scanner"
                    android:id="@+id/txtresultScanner"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="21sp"
            />
        </LinearLayout>

    </RelativeLayout>





    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                    android:id="@+id/relativeLayoutp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp">

                <ImageView
                        android:id="@+id/imageView_montantpaiebus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/startblue"
                        android:padding="8dp"
                        android:src="@drawable/ic_attach_money_black_24dp"
                        android:tint="@color/white" />

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView_montantpaiebus"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView_montantpaiebus"
                        android:background="@color/editTextBG"
                        android:hint="Montant"
                        android:id="@+id/edtmontantpaiebus"
                        android:inputType="number"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/relativeLayoutp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutp1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp">

                <ImageView
                        android:id="@+id/imageView_passagerpaiebus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/startblue"
                        android:padding="8dp"
                        android:src="@drawable/ic_person_black_24dp"
                        android:tint="@color/white" />

                <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView_passagerpaiebus"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView_passagerpaiebus"
                        android:background="@color/editTextBG"
                        android:hint="Rechercher Passeger"
                        android:id="@+id/spinnerclientpaiebus"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/relativeLayoutp3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/relativeLayoutp2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp">



                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/transparent"
                        android:id="@+id/btnForget"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor"
                        android:textSize="13sp" />

            </RelativeLayout>

            <Button
                    android:id="@+id/btn_save_paiebus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutp3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/rounded_btn"
                    android:text="ENREGISTRER"
                    android:textColor="@color/white" />

            <ImageView
                    android:id="@+id/imageViewp2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/btn_save_paiebus"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layerType="software"
                    android:src="@drawable/circle" />

