<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ProprietaireActivity">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp">
        <LinearLayout
                android:backgroundTint="@color/startblue"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:background="@drawable/entetebackground"
        >
            <ImageView
                    android:layout_marginTop="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="107dp"
                    android:layout_height="97dp"
                    android:src="@drawable/ic_directions_bus_black_24dp"
            />
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compte Bus"
                    android:textColor="#fff"
                    android:id="@+id/compte_bus_labelphoto"
                    android:textStyle="bold"
                    android:textSize="21sp"
            />
        </LinearLayout>
        <android.support.v7.widget.CardView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
            >
                <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20sp"
                            android:textStyle="bold"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10dp"
                            android:textColor="@color/startblue"/>

                </LinearLayout>
                <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FC"
                            android:textSize="20sp"
                            android:textStyle="bold"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10dp"
                            android:id="@+id/compte_bus_montant"
                            android:textColor="@color/startblue"/>

                </LinearLayout>
                <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20sp"
                            android:textStyle="bold"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10dp"
                            android:textColor="@color/startblue"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">
        <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_format_list_numbered_black_24dp"
            />
            <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="260dp"
                    android:layout_height="36dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/compte_bus_numeroplaque"
                    android:hint="Numero de la plaque"
            />

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_filter_1_black_24dp"
            />
            <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="260dp"
                    android:layout_height="36dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/compte_bus_maque"
                    android:hint="Marque"
            />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_person_black_24dp"
            />
            <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="260dp"
                    android:layout_height="36dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/compte_bus_proprietaire"
                    android:hint="Proprietaire"
            />

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_airport_shuttle_black_24dp"

            />
            <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="260dp"
                    android:layout_height="36dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/compte_bus_chauffeur"
                    android:hint="Chauffeur"
            />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>